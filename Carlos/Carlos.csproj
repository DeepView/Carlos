<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>$(FileVersion)</Version>
    <Authors>Li Huaxiang</Authors>
    <Copyright>© 2025 $(Authors) and contributors</Copyright>
    <PackageId>Carlos Saber</PackageId>
    <Product>Carlos Saber</Product>
    <AssemblyName>CarlosSaber</AssemblyName>
    <AssemblyVersion>1.1.2511.0</AssemblyVersion>
    <FileVersion>1.1.2511.0</FileVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <Description>Carlos Saber is a tool extension library for .NET, applicable to C#, VB, F# and C++/CLI.</Description>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <IncludeSymbols>False</IncludeSymbols>
    <TargetFramework>net10.0</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE,WIN32,CONSOLE</DefineConstants>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Optimize>True</Optimize>
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>True</Optimize>
    <DefineConstants>$(DefineConstants)TRACE,WIN32,CONSOLE</DefineConstants>
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="MachineLearning\**" />
    <EmbeddedResource Remove="MachineLearning\**" />
    <None Remove="MachineLearning\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Data\SQLServerHelper.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="coverlet.collector" Version="6.0.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Melanchall.DryWetMidi" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.AI" Version="10.0.0" />
    <PackageReference Include="OllamaSharp" Version="5.4.11" />
    <PackageReference Include="OpenCL.Net" Version="2.2.9" />
    <PackageReference Include="SharpDX" Version="4.2.0" />
    <PackageReference Include="SharpDX.D3DCompiler" Version="4.2.0" />
    <PackageReference Include="SharpDX.Direct3D11" Version="4.2.0" />
    <PackageReference Include="System.Data.SQLite" Version="2.0.2" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
    <PackageReference Include="System.Security.Permissions" Version="10.0.0" />
  </ItemGroup>

</Project>
